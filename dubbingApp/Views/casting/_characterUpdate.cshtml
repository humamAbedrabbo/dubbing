@model dubbingModel.workCharacter

<div class="container-fluid" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-10">
                    <label>Update Character</label>
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-default btn-xs pull-right" onclick="onCloseClick()" title="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            @using (Ajax.BeginForm("characterUpdate", "casting",
                                                new AjaxOptions()
                                                {
                                                    HttpMethod = "POST",
                                                    OnSuccess = "onSuccess"
                                                },
                                                new { @class = "form-horizontal" }
                                                ))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.workIntno)
                @Html.HiddenFor(m => m.workCharacterIntno)

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.characterName, "Used Name", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.characterName, new { htmlAttributes = new { @class = "form-control", required = "true", autofocus = "" } })
                    </div>
                </div>

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.nickName, "Original Name", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.nickName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.othCharacterName, "Other Name", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.othCharacterName, new { htmlAttributes = new { @class = "form-control", required = "true" } })
                    </div>
                </div>

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.characterType, "Type", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.DropDownListFor(model => model.characterType, new SelectList(ViewBag.characterTypesList, "key", "value"), string.Empty, htmlAttributes: new { @class = "form-control", required = "true" })
                    </div>
                </div>

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.characterGender, "Gender", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.DropDownListFor(model => model.characterGender, new SelectList(ViewBag.characterGendersList, "key", "value"), string.Empty, htmlAttributes: new { @class = "form-control", required = "true" })
                    </div>
                </div>

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.characterDesc, "Description", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.characterDesc, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.remarks, "Remarks", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.remarks, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.sortOrder, "Sort Order", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.sortOrder, new { htmlAttributes = new { @class = "form-control", required = "true" } })
                    </div>
                </div>

                <div class="form-group-sm">
                    <button type="submit" class="btn btn-default btn-sm">Submit</button>
                    <label class="alert-success" id="formResult"></label>
                </div>
            }
        </div>
    </div>
</div>
@model IEnumerable<dubbingModel.workActor>

<div class="panel panel-default">
    <div class="panel panel-heading">
        <div class="row">
            <div class="col-sm-10">
                <label>Casting Details</label>
            </div>
            <div class="col-sm-2">
                <button class="btn btn-default btn-xs pull-right" onclick="onCloseClick()" title="Close">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
    <div class="panel-body" style="padding-top:0px">
        <table class="table-condensed">
            <thead>
                <tr>
                    <th class="col-sm-6"><small>Actor</small></th>
                    <th class="col-sm-3"><small>Since</small></th>
                    <th class="col-sm-3"><small>Scene/Hour</small></th>
                </tr>
            </thead>
            <tbody>
                @foreach (dubbingModel.workActor item in Model)
                {
                    <tr>
                        <td class="col-sm-6"><small>@item.voiceActor.fullName</small></td>
                        <td class="col-sm-3"><small>@item.fromDate.ToShortDateString()</small></td>
                        <td class="col-sm-3"><small>@item.scenesPerHour</small></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-sm-3 col-sm-offset-2">
                <button class="btn btn-default btn-xs" onclick="onActorUpdateClick(@ViewBag.workIntno, @ViewBag.workCharacterIntno)" title="Modify">
                    Edit Current
                </button>
            </div>
            <div class="col-sm-3">
                <button class="btn btn-default btn-xs" onclick="onActorAddNewClick(@ViewBag.workIntno, @ViewBag.workCharacterIntno)" title="Replace">
                    Replace Current
                </button>
            </div>
        </div>
    </div>
</div>


@model dubbingApp.Models.ViewModels.castingListViewModel

@using (Ajax.BeginForm("castingUpdate", "discharging",
                                new AjaxOptions()
                                {
                                    HttpMethod = "POST",
                                    UpdateTargetId = "formResult",
                                    OnSuccess = "onSuccess(" + ViewBag.orderItem + ")"
                                }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.dubbSheetHdrIntno)
    @Html.HiddenFor(m => m.orderTrnHdrIntno)
    @Html.HiddenFor(m => m.workCharacterIntno)
    
    <div class="form-group-sm">
        <small>@Html.LabelFor(model => model.characterName, "Character", htmlAttributes: new { @class = "control-label" })</small>
        <div>
            @Html.DisplayFor(model => model.characterName, new { htmlAttributes = new { @class = "form-control-static" } })
        </div>
    </div>

    <div class="form-group-sm">
        <small>@Html.LabelFor(model => model.totalScenes, "Total Scenes", htmlAttributes: new { @class = "control-label" })</small>
        <div>
            @Html.DisplayFor(model => model.totalScenes, new { htmlAttributes = new { @class = "form-control-static" } })
        </div>
    </div>

    <div class="form-group-sm">
        <small>@Html.LabelFor(model => model.voiceActorIntno, "Select Actor from List ...", htmlAttributes: new { @class = "control-label" })</small>
        <div>
            @Html.DropDownListFor(model => model.voiceActorIntno, ViewBag.actorsList as SelectList, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group-sm">
        <small>@Html.LabelFor(model => model.actorName, "Or Provide Cast Name", htmlAttributes: new { @class = "control-label" })</small>
        <div>
            @Html.EditorFor(model => model.actorName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group-sm">
        <button type="submit" class="btn btn-default btn-sm pull-left">Submit</button>
        <small><label class="alert-success" id="formResult"></label></small>
    </div>
}

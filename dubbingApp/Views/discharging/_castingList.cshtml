@model IEnumerable<dubbingApp.Models.ViewModels.castingListViewModel>
@{ TempData["actorsList"] = ViewBag.actorsList;
   TempData["orderItem"] = ViewBag.orderItem; }

<div class="container-fluid" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-1">
                    <button class="btn btn-default btn-xs pull-left" onclick="onRefreshCastClick(@ViewBag.orderItem)" title="Refresh Cast">
                        <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                    </button>
                </div>
                <div class="col-sm-9">
                    <label>Characters List For @ViewBag.workEpisode</label>
                </div>
                @{ 
                    string btnColor = "btn-default";
                    if (ViewBag.isGenerated)
                    {
                        btnColor = "btn-success";
                    }
                }
                <div class="col-sm-2">
                    <button class="btn @btnColor btn-xs pull-right" id="calendarBtn" onclick="onGenerateCalendarClick(@ViewBag.orderItem)" title="Generate Calendar">
                        <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                    </button>
                    <button class="btn btn-default btn-xs pull-right" onclick="onDischargeClick(@ViewBag.orderItem)" title="Download Discharging Table">
                        <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row" style="border-bottom-width:thin; border-bottom-style:solid; border-bottom-color:lightgray">
                <div class="col-sm-3"><label><small>Character</small></label></div>
                <div class="col-sm-1"><label><small>Total Scenes</small></label></div>
                <div class="col-sm-3"><label><small>Cast</small></label></div>
                <div class="col-sm-3"><label><small>Actor Name</small></label></div>
                <div class="col-sm-1 pull-right"><label><small>#</small></label></div>
            </div>
            <br />
            @foreach (var item in Model)
            {
                if (item.voiceActorIntno != 0)
                {
                    <div class="row">
                        <div class="col-sm-3"><small>@item.characterName</small></div>
                        <div class="col-sm-1"><small>@item.totalScenes</small></div>
                        <div class="col-sm-3"><small>@item.actorName</small></div>
                        <div class="col-sm-3"><small></small></div>
                        <div class="col-sm-1 pull-right">
                            <button type="button" class="btn btn-default btn-xs pull-right" onclick="onEndorseClick(@item.dubbSheetHdrIntno)" title="Endorse Dubbing">
                                <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        @Html.Partial("_castingUpdate", item)
                    </div>
                }
            }
        </div>
    </div>
</div>

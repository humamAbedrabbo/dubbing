@model IEnumerable<dubbingModel.studio>

<div class="container-fluid" style="padding:0px">
    <div class="row">
        <div class="col-sm-12" style="text-align:center">
            <label>PROGRESS</label>
            <span>
                <button class="btn btn-default btn-xs" onclick="onRefreshClick()" title="Refresh">
                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                </button>
            </span>
        </div>
    </div>
    @foreach (var std in Model)
    {
        string progressBar = "progress-bar" + std.studioNo;
        <p><strong><small>STUDIO &nbsp; @std.studioNo</small></strong></p>
        <div class="row">
            <div class="col-sm-12">
                <div class="progress" style="padding:0px;height:10px" title="Weekly Progress">
                    <div class="progress-bar" id="@progressBar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:60%">
                        <span class="sr-only">50% Complete</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@model IEnumerable<dubbingModel.clientClaim>
@using dubbingApp.Models;

<div class="container-fluid">
    <div>
        <label class="col-sm-12">Client Complains</label>
        <label><a href="#" onclick="onOrderItemComplainAddNewClick(@ViewBag.orderItem)">Add New Complain ...</a></label>
    </div>
    @{ if (Model.Count() != 0) { 
        <table class="table">
            <thead>
                <tr>
                    <th class="col-sm-10"><label><small>Issue / Action</small></label></th>
                    <th class="col-sm-1"><label><small>Open?</small></label></th>
                    <th class="col-sm-1"><label><small>#</small></label></th>
                </tr>
            </thead>
            <tbody>
                @foreach (dubbingModel.clientClaim item in Model)
                {
                    <tr>
                        <td class="col-sm-10"><small>@item.claimDesc</small></td>
                        <td class="col-sm-1"><small>@Html.CheckBoxFor(m => @item.status)</small></td>
                        <td class="col-sm-1">
                            <button class="btn btn-default btn-xs pull-right" onclick="onOrderItemComplainEndorseClick(@item.claimIntno)" title="Endorse">
                                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-sm-12"><label><small>Required Action: </small></label>&nbsp;<small>@item.requiredAction</small></td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    } }
    <div id="complainDetails"></div>
</div>

@model dubbingModel.orderCheck

<div class="container-fluid" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-10">
                    <small>Add New Quality Issue</small>
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-default btn-xs pull-right" onclick="onIssueCloseClick()" title="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            @using (Ajax.BeginForm("orderItemIssueAddNew", "orders", new { id = ViewBag.orderItem },
                                                new AjaxOptions()
                                                {
                                                    HttpMethod = "POST",
                                                    UpdateTargetId = "formResult",
                                                    OnSuccess = "onIssueSuccess(" + ViewBag.orderItem + ")"
                                                }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group-sm">
                    <small>@Html.LabelFor(model => model.checkType, "Issue", htmlAttributes: new { @class = "control-label col-sm-12" })</small>
                    <div class="col-sm-12">
                        @Html.DropDownListFor(model => model.checkType, new SelectList(ViewBag.checkTypesList, "key", "value"), string.Empty, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.checkType, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group-sm">
                    <small>@Html.LabelFor(model => model.isAccepted, "Is Accepted", htmlAttributes: new { @class = "control-label col-sm-12" })</small>
                    <div class="col-sm-12">
                        @Html.CheckBoxFor(model => model.isAccepted, htmlAttributes: new { @class = "form-control-sm", @checked = "@checked" })
                        @Html.ValidationMessageFor(model => model.isAccepted, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-default btn-xs">Submit</button>
                        <label class="alert-success" id="formResult"></label>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
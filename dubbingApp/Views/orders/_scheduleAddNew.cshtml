<div class="container-fluid" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-10">
                    <label>Execution Planning</label>
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-default btn-xs" onclick="onActionCloseClick()" title="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            @using (Ajax.BeginForm("scheduleAddNew", "orders", 
                            new { oiList = ViewBag.oiList },
                            new AjaxOptions()
                            {
                                HttpMethod = "POST",
                                OnSuccess = "onSuccess",
                                UpdateTargetId = "formResult"
                            }))
            {
                @Html.AntiForgeryToken()
                
                <div class="form-group-sm">
                    <label class="control-label"><small>Upload Date</small></label>
                    <div class="col-sm-12" style="padding-left:0px">
                        <input type="date" class="form-control" name="uploadDate" />
                    </div>
                </div>

                <div class="form-group-sm">
                    <label class="control-label"><small>Dubbing Date</small></label>
                    <div class="col-sm-12" style="padding-left:0px">
                        <input type="date" class="form-control" id="dubbingDateCtrl" name="dubbingDate" />
                    </div>
                </div>
                
                <div class="form-group-sm">
                    <label class="control-label"><small>Shipment Date</small></label>
                    <div class="col-sm-12" style="padding-left:0px">
                        <input type="date" class="form-control" name="shipmentDate" />
                    </div>
                </div>
                
                <div class="form-group-sm">
                    <div class="col-sm-12" style="padding-left:0px">
                        <button type="submit" class="btn btn-default" onclick="onScheduleDateChange(event, '@ViewBag.fdw');">Submit</button>
                    </div>
                </div>

                <div class="col-sm-12" style="padding-left:0px">
                    <small><label class="alert-success" id="formResult"></label></small>
                </div>
            }
        </div>
    </div>
</div>

<div class="container-fluid" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-10">
                    <label>Episodes Scheduling</label>
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-default btn-xs" onclick="onCloseClick()" title="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <p>
                <small><label>@ViewBag.workName</label></small>
            </p>

            @using (Ajax.BeginForm("scheduleAddNew", "orders",
                            new { orderItem = ViewBag.orderItem, fromEpisode = ViewBag.episodeNo },
                            new AjaxOptions()
                            {
                                HttpMethod = "POST",
                                OnSuccess = "onSuccess",
                                UpdateTargetId = "formResult"
                            },
                            new { @class = "form-horizontal"}))
            {
                @Html.AntiForgeryToken()
                
                <fieldset>
                    <div class="form-group-sm">
                        <label class="control-label">From Episode</label>
                        <input type="text" disabled class="form-control" name="fromEpisode" value="@ViewBag.episodeNo" />
                    </div>

                    <div class="form-group-sm">
                        <label class="control-label">Through Episode</label>
                        <input type="text" class="form-control" name="thruEpisode" required autofocus />
                    </div>

                    <div class="form-group-sm">
                        <label class="control-label">Upload Date</label>
                        <input type="date" class="form-control" name="uploadDate" />
                    </div>

                    <div class="form-group-sm">
                        <label class="control-label">Dubbing Date</label>
                        <input type="date" class="form-control" id="dubbingDateCtrl" name="dubbingDate" />
                    </div>

                    <div class="form-group-sm">
                        <label class="control-label">Shipment Date</label>
                        <input type="date" class="form-control" name="shipmentDate" />
                    </div>
                </fieldset>

                <div class="form-group-sm">
                    <button type="submit" class="btn btn-default btn-sm">Submit</button>
                </div>
                <span><small><label class="alert-success" id="formResult"></label></small></span>
            }
        </div>
    </div>
</div>

@model IEnumerable<dubbingModel.orderCheck>
@using dubbingApp.Models;

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-9">
                    <label>Received Quality Issues</label>
                </div>
                <div class="col-sm-3">
                    <button class="btn btn-default btn-xs pull-right" onclick="onCloseClick()" title="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                    <button class="btn btn-default btn-xs pull-right" onclick="onOrderItemIssueAddNewClick(@ViewBag.orderItem)" title="Close">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            @{ 
                if (Model.Count() != 0)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <td class="col-sm-10"><label><small>Issue</small></label></td>
                                <td class="col-sm-1"><label><small>Ok?</small></label></td>
                                <td class="col-sm-1"><label><small>#</small></label></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (dubbingModel.orderCheck item in Model)
                            {
                                <tr>
                                    <td class="col-sm-10"><small>@LookupModels.decodeDictionaryItem("checkType", @item.checkType)</small></td>
                                    <td class="col-sm-1"><small>@Html.CheckBoxFor(m => @item.isAccepted)</small></td>
                                    <td class="col-sm-1">
                                        <button class="btn btn-default btn-xs pull-right" onclick="onOrderItemIssueRemoveClick(@item.orderCheckIntno)" title="Remove">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                } 
            }
        </div>
    </div>
    <div id="qualityDetails"></div>
</div>

@model dubbingModel.clientClaim

<div class="container-fluid" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-10">
                    Add New Client Claim
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-default btn-xs pull-right" onclick="onComplainCloseClick()" title="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            @using (Ajax.BeginForm("orderItemComplainAddNew", "orders", new { id = ViewBag.orderItem },
                                                new AjaxOptions()
                                                {
                                                    HttpMethod = "POST",
                                                    UpdateTargetId = "formResult",
                                                    OnSuccess = "onComplainSuccess(" + ViewBag.orderItem + ")"
                                                },
                                                new { @class = "form-horizontal" }
                                                ))
            {
                @Html.AntiForgeryToken()

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.receivedDate, "Received Date", htmlAttributes: new { @class = "control-label" })
                    <div>
                        <input type="date" name="receivedDate" required autofocus />
                    </div>
                </div>

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.claimType, "Media", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.DropDownListFor(model => model.claimType, new SelectList(ViewBag.claimTypesList, "key", "value"), string.Empty, htmlAttributes: new { @class = "form-control", required = "true" })
                    </div>
                </div>

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.claimRefNo, "Ref. No.", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.claimRefNo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.claimDesc, "Desc", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.claimDesc, new { htmlAttributes = new { @class = "form-control", required = "true" } })
                    </div>
                </div>

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.refLocation, "Ref. Location", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.refLocation, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.requiredAction, "Required Action", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.requiredAction, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group-sm">
                    @Html.LabelFor(model => model.actionDate, "Action Date", htmlAttributes: new { @class = "control-label", required = "true" })
                    <div>
                        <input type="date" name="actionDate" />
                    </div>
                </div>

                <div class="form-group-sm">
                    <button type="submit" class="btn btn-default btn-sm">Submit</button>
                    <label class="alert-success" id="formResult"></label>
                </div>
            }
        </div>
    </div>
</div>
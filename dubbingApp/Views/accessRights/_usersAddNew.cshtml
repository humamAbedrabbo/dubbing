@model dubbingApp.Models.RegisterViewModel

<div class="container-fluid" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-10">
                    <label>New User</label>
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-default btn-xs pull-right" onclick="onCloseClick()" title="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            @using (Ajax.BeginForm("usersAddNew", "accessRights",
                                                        new AjaxOptions()
                                                        {
                                                            HttpMethod = "POST",
                                                            UpdateTargetId = "formResult"
                                                        },
                                                        new { @class = "form-horizontal" }
                                                        ))
            {
                @Html.AntiForgeryToken()

                <div class="form-group-sm">
                    <small>@Html.LabelFor(model => model.Email, "email", htmlAttributes: new { @class = "control-label" })</small>
                    <div>
                        <input type="email" name="Email" class="form-control" />
                    </div>
                </div>
                
                <div class="form-group-sm">
                    <button type="submit" class="btn btn-default btn-sm">Register</button>
                </div>
                <small><label class="alert-success" id="formResult"></label></small>
            }
        </div>
    </div>
</div>
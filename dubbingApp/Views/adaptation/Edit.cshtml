@using dubbingModel
@model orderTrnHdr

@{
    ViewBag.Title = "Edit";
}

<link href="~/Content/adaptation.css" rel="stylesheet" />

<div class="page-header">
    <h1 style="text-align:center;">@Model.agreementWork.workName <small>/ @Model.episodeNo</small></h1>
</div>
<div class="row">
    @Html.Hidden("orderTrnHdrIntno", @Model.orderTrnHdrIntno)
    @Html.Hidden("activeScene", "0")

    <div class="col-md-2">
        <div class="row">
            
            <div id="sceneDetailsContainer"></div>

            <div class="panel panel-info">
                <div class="panel-heading">Characters List</div>
                <div id="charactersList">
                    
                </div>
            </div>
        </div>
    </div>
    <!-- <span class="label label-warning">...</span> -->
    <div class="col-md-8">
        <div id="dialogListContainer">
            @*@Html.Action("dialogList", "adaptation", new { orderTrnHdrIntno = Model.orderTrnHdrIntno, sceneNo = ViewBag.SceneNo })*@
        </div>
    </div>
    <div class="col-md-2">
        <a style="margin-bottom: 5px;" class="btn btn-success form-control" href='@Url.Action("downloadFile", new { @Model.orderTrnHdrIntno })'>Download</a>
        <br />
        <div id="scenesListContainer">
            @Html.Action("sceneList", "adaptation", new { orderTrnHdrIntno = Model.orderTrnHdrIntno })
        </div>
    </div>
</div>

@section Scripts
{
    
    <script src="~/Scripts/dubbing/adaptation.js"></script>

    <script>
        $(function () {

            setActiveScene(1);
            fixTags();
            charactersList();
            // addSceneClickEvent(@Model.orderTrnHdrIntno);

            // fixTags();

            
        });
    </script>
}


@model dubbingModel.agreementTerm

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-10">
                    <label>Add New Condition</label>
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-default btn-xs pull-right" onclick="onCloseClick()" title="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            @using (Ajax.BeginForm("termsAddNew", "agreements", new { id = ViewBag.agreementIntno },
                                                new AjaxOptions()
                                                {
                                                    HttpMethod = "POST",
                                                    UpdateTargetId = "tList",
                                                    OnSuccess = "onSuccess"
                                                },
                                                new { @class = "form-horizontal" }
                                                ))
            {
                @Html.AntiForgeryToken()

                <div class="form-group-sm">
                    <small>@Html.LabelFor(model => model.sortOrder, "Serial", htmlAttributes: new { @class = "control-label" })</small>
                    <div>
                        @Html.EditorFor(model => model.sortOrder, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group-sm">
                    <small>@Html.LabelFor(model => model.termDesc, "Term / Condition", htmlAttributes: new { @class = "control-label" })</small>
                    <div>
                        @Html.EditorFor(model => model.termDesc, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group-sm">
                    <button type="submit" class="btn btn-default btn-sm">Submit</button>
                    <small><label class="alert-success" id="formResult"></label></small>
                </div>
            }
        </div>
    </div>
</div>
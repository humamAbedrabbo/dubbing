@model IEnumerable<string>

<div class="container-fluid" id="scheduleDetails" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-10">
                    <label><small>Available Episodes List</small></label>
                </div>
                <div class="col-sm-2 pull-right">
                    <button class="btn btn-default btn-xs" onclick="onCloseClick()" title="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            @foreach (string dtl in Model)
            {
                string[] item = dtl.Split('|');
                if (!string.IsNullOrEmpty(@item[1]))
                {
                    string epId = item[0];
                    <div class="col-sm-12">
                        @Html.CheckBox("episodeSelect", new { @class = "selectCb", @id = epId })
                        <a><small>Episode @item[1]</small></a>
                    </div>
                }
                else
                {
                    <div class="col-sm-12">@item[0]</div>
                }
            }

            <div class="col-sm-12">
                <button class="btn btn-xs btn-default" onclick="onEpisodesLoadClick(@ViewBag.work, @ViewBag.schedule)">Load Selection</button>
            </div>
        </div>
    </div>
</div>

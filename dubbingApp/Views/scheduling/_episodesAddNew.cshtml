@model IEnumerable<string>

<div class="container-fluid" id="scheduleDetails" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-10">
                    <label><small>@ViewBag.workName</small></label>
                </div>
                <div class="col-sm-2 pull-right">
                    <button class="btn btn-default btn-xs" onclick="onCloseClick()" title="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <table class="table-hover table-condensed">
                <thead>
                    <tr>
                        <td class="col-sm-1"><small><label>#</label></small></td>
                        <td class="col-sm-2"><small><label>Ep</label></small></td>
                        <td class="col-sm-3"><small><label>Priority</label></small></td>
                        <td class="col-sm-3"><small><label>Upload</label></small></td>
                        <td class="col-sm-3"><small><label>Adaptation</label></small></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (string dtl in Model)
                    {
                        string[] item = dtl.Split('|');
                        string epId = item[0];
                        <tr>
                            <td class="col-sm-1">
                                @Html.CheckBox("episodeSelect", new { @class = "selectCb", @id = epId })
                            </td>
                            <td class="col-sm-2"><small>@item[1]</small></td>
                            <td class="col-sm-3"><small>@item[2]</small></td>
                            <td class="col-sm-3"><small>@item[3]</small></td>
                            <td class="col-sm-3"><small>@item[4]</small></td>
                        </tr>
                    }
                </tbody>
            </table>
            

            <div class="col-sm-12">
                <button class="btn btn-xs btn-default" onclick="onEpisodesLoadClick(@ViewBag.work, @ViewBag.schedule)">Load Selection</button>
            </div>
        </div>
    </div>
</div>

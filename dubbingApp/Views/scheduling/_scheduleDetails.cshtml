@model IEnumerable<string>

<div class="container-fluid" id="scheduleDetails" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-10">
                    <label><small>Bulletin for Schedule: @ViewBag.schedule</small></label>
                </div>
                <div class="col-sm-2 pull-right">
                    <button class="btn btn-default btn-xs" onclick="onCloseClick()" title="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th class="col-sm-3"><small>Studio</small></th>
                        <th class="col-sm-6"><small>Work</small></th>
                        <th class="col-sm-3"><small>Episodes</small></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (string rec in Model)
                    {
                        string[] x = rec.Split('|');
                        <tr>
                            <td class="col-sm-3"><small>Studio @x[0]</small></td>
                            <td class="col-sm-6"><small>@x[1]</small></td>
                            <td class="col-sm-3"><small>@x[2]</small></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <div class="col-sm-12 btn-group-xs" style="padding:2px">
                <button class="btn btn-xs btn-success" onclick="onGenerateCalendarClick(@ViewBag.scheduleIntno)">Generate Studios Calendar</button>
                <button class="btn btn-xs btn-default" onclick="onSchedulesDeleteClick(@ViewBag.scheduleIntno)">Delete Schedule</button>
            </div>
            <div class="col-sm-12">
                <small><label class="alert-success" id="result"></label></small>
            </div>
        </div>
    </div>
</div>

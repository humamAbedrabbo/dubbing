@model IEnumerable<string>

<div class="container-fluid" style="padding:0px">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-12">
                    <small><label>Actors Calendar</label></small>
                </div>
            </div>
        </div>
        <div class="panel-body" style="padding:5px">
            @if (Model.Count() != 0)
            {
                <table class="table table-hover table-condensed">
                    <thead>
                        <tr>
                            <th><small>Actor</small></th>
                            <th><small>Date</small></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var apt in Model)
                        {
                            string[] rec = apt.Split('|');
                            <tr>
                                <td><small>@rec[0]</small></td>
                                <td><small>@rec[1]</small></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <small>No Calendar was generated for Studio</small>
            }
        </div>
    </div>
</div>

@model IEnumerable<string>

<div class="container-fluid" id="scheduleDetails" style="padding:0px">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-12">
                    <label><small>Bulletin for: @ViewBag.schedule</small></label>
                </div>
            </div>
        </div>
        <div class="panel-body" style="padding-left:5px;padding-right:5px">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th class="col-sm-10"><small>Work</small></th>
                        <th class="col-sm-2"><small>Cnt</small></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (string rec in Model)
                    {
                        string[] x = rec.Split('|');
                        <tr>
                            <td class="col-sm-10"><small>@x[0]</small></td>
                            <td class="col-sm-2"><small>@x[1]</small></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <div class="col-sm-12 btn-group-xs" style="padding:2px">
                <button class="btn btn-xs btn-primary" onclick="onSchedulesReloadClick(@ViewBag.scheduleIntno)">Reload</button>
                <button class="btn btn-xs btn-info" onclick="onSchedulesPublishClick(@ViewBag.scheduleIntno)">Publish</button>
                <button class="btn btn-xs btn-danger" onclick="onSchedulesDeleteClick(@ViewBag.scheduleIntno)">Delete</button>
                <button class="btn btn-xs btn-success" onclick="onSchedulesEndorseClick(@ViewBag.scheduleIntno)">Endorse</button>
            </div>
            <div class="col-sm-12">
                <small><label class="alert-success" id="result"></label></small>
            </div>
        </div>
    </div>
</div>

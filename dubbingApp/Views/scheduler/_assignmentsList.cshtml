@model IEnumerable<dubbingApp.Models.ViewModels.assignmentViewModel>

<div class="container-fluid" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-6">
                    <label><small>Assignments</small></label>
                </div>
                <div class="col-sm-6">
                    <span class="badge pull-right" style="background-color:crimson"><small>Overdue</small></span>
                    <span class="badge pull-right" style="color:black; background-color:lightblue"><small>Within Schedule</small></span>
                </div>
            </div>
        </div>
        <div class="panel-body" style="padding:5px">
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th><small>#</small></th>
                        <th><small>Supervisor</small></th>
                        <th><small>Work</small></th>
                        <th><small>Ep</small></th>
                        <th><small>Due</small></th>
                        <th style="background-color:lightgray"><small>Upload</small></th>
                        <th><small>Studio</small></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class=@item.status>
                            <td>
                                <button class="btn btn-default btn-xs pull-left" onclick="onRescheduleClick(@item.orderTrnDtlIntno)" title="Reschedule">
                                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                                </button>
                            </td>
                            <td><small>@item.empName</small></td>
                            <td><small>@item.workName</small></td>
                            <td><small>@item.episodeNo</small></td>
                            <td><small>@item.dueDate</small></td>
                            <td style="background-color:lightgray"><small>@item.uploadDate</small></td>
                            <td>
                                @if (item.studioIntno.HasValue)
                                {
                                    <button class="btn btn-default btn-xs" onclick="onStudioAllocationClick(@item.studioIntno, @ViewBag.schedule)" title="Allocation">
                                        @{ string allocation = string.IsNullOrEmpty(item.studioNo) ? "---" : item.studioNo; }
                                        @allocation
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
        </div>
    </div>
</div>


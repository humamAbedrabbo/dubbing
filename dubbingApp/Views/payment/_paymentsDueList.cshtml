@model IEnumerable<dubbingModel.paymentsDueVW>

@if (Model.Count() != 0)
{
    <div class="container-fluid" style="padding:0px">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-11"><label class="badge">Payments Due List</label></div>
                    <div class="col-sm-1">
                        <button class="btn btn-default btn-xs pull-right" onclick="onPaymentsDueRefreshClick()" title="Refresh">
                            <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-condensed">
                    <thead>
                        <tr>
                            <th><small>Actor</small></th>
                            <th><small>Dubbing Date</small></th>
                            <th><small>Work</small></th>
                            <th><small>Scenes</small></th>
                            <th><small>#</small></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rsc in Model)
                        {
                            var x = Model.Where(b => b.voiceActorIntno == rsc.voiceActorIntno && b.actorName == rsc.actorName).Distinct();
                            int r = x.Count() + 1;
                            int i = 0;
                            var x1 = x.First();
                            string dubbingDate = rsc.dubbingDate.HasValue ? x1.dubbingDate.Value.DayOfWeek + ", " + x1.dubbingDate.Value.ToString("dd/MM") : null;
                            <tr>
                                <td rowspan="@r"><small><label>@rsc.actorName</label></small></td>
                                <td><small>@dubbingDate</small></td>
                                <td><small>@x1.workName</small></td>
                                <td><small>@x1.totalUnits</small></td>
                                <td rowspan="@r">
                                    <button class="btn btn-default btn-xs" onclick="onGeneratePaymentClick(@x1.workIntno, '@x1.workName', @x1.voiceActorIntno, '@x1.actorName')" title="Generate Payment">
                                        <span class="glyphicon glyphicon-usd" aria-hidden="true"></span>
                                    </button>
                                </td>
                            </tr>
                            foreach (var x2 in x)
                            {
                                if (i != 0)
                                {
                                    <tr>
                                        <td><small>@x2.dubbingDate.Value.DayOfWeek @x2.dubbingDate.Value.ToString("dd/MM")</small></td>
                                        <td><small>@x2.workName</small></td>
                                        <td><small>@x2.totalUnits</small></td>
                                    </tr>
                                }
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
                

@model IEnumerable<dubbingModel.paymentTemp>
@{ string text1 = '"' + ViewBag.name + '"'; }

@if (Model.Count() != 0)
{
    <div class="container-fluid" style="padding:0px">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-9"><label class="badge">Performed Works By the Actor</label></div>
                    <div class="col-sm-3">
                        <button class="btn btn-default btn-xs pull-right" onclick="onGeneratePaymentClick(@ViewBag.id, @text1)" title="Generate Payment">
                            <span class="glyphicon glyphicon-usd" aria-hidden="true"></span>
                        </button>
                        <button class="btn btn-default btn-xs pull-right" onclick="onPaymentsDueRefreshClick(@ViewBag.id, @text1)" title="Refresh">
                            <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-condensed">
                    <thead>
                        <tr>
                            <th class="col-sm-3"><small>Dubbing Date</small></th>
                            <th class="col-sm-7"><small>Work</small></th>
                            <th class="col-sm-2"><small>Total Scenes</small></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td class="col-sm-3">
                                    <small>@x.trnDate.DayOfWeek @x.trnDate.ToString("dd/MM")</small>
                                </td>
                                <td class="col-sm-7">
                                    <small>@x.workName</small>
                                </td>
                                <td class="col-sm-2">
                                    <small>@x.totalUnits</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
                

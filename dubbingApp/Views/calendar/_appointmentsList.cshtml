@model IEnumerable<dubbingModel.dubbingAppointment>

<div class="container-fluid" style="padding:0px">
    @foreach (dubbingModel.dubbingAppointment item in Model)
    {
        string apt = "APT" + item.dubbAppointIntno;
        string arrival;
        string alertColor;
        if (item.fromTime.HasValue)
        {
            arrival = "Studio " + @item.studio.studioNo + " / Arrival " + @item.fromTime.Value.ToShortTimeString();
            alertColor = "alert-default";
        }
        else
        {
            arrival = "Studio " + @item.studio.studioNo + " / Arrival Not Provided";
            alertColor = "alert-danger";
        }
        <div class="panel panel-default" id="@apt">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-4">
                        <label class="badge"><small>@item.appointmentDate.DayOfWeek @item.appointmentDate.ToString("dd/MM")</small></label>
                    </div>
                    <div class="col-sm-6">
                        <label class="@alertColor"><small>@arrival</small></label>
                    </div>
                    <div class="col-sm-2">
                        <button class="btn btn-default btn-xs pull-right" onclick="onAppointmentUpdateClick(@item.dubbAppointIntno)" title="Modify">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </button>
                        <button class="btn btn-default btn-xs pull-right" onclick="onAppointmentDeleteClick(@item.dubbAppointIntno)" title="Delete">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6">
                        <label><small>@item.agreementWork.workName</small></label>
                    </div>
                    <div class="col-sm-6">
                        <small>Total Scenes: &nbsp;<label class="badge">@item.totalScenes</label></small>
                        <small> / Total Minutes: &nbsp;<label class="badge">@item.totalMinutes</label></small>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <small><label>Remarks: </label>@item.remarks</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

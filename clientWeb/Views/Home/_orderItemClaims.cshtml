@model IEnumerable<dubbingModel.clientClaim>

<div class="container-fluid" style="padding:0px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-10">
                    <label>Client Claims</label>
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-default btn-xs pull-right" onclick="onCloseClick()" title="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            @{ int cnt = 0; string cntLbl; }
            @foreach (var x in Model)
            {
                cnt++;
                cntLbl = cnt.ToString() + ".";
                <div class="row">
                    <div class="col-xs-2">
                        <label class="badge alert-info">@cntLbl</label>
                    </div>
                    <div class="col-xs-8">
                        <label><small>Ref. Location</small></label> <small>@x.refLocation</small>
                    </div>
                    <div class="col-xs-2">
                        @if (x.status)
                        {
                            <label class="glyphicon glyphicon-ok"></label>
                        }
                    </div>
                </div>
                <div><small><label>Error: </label>&nbsp; @x.claimDesc</small></div>
                <div><small><label>Correction: </label>&nbsp; @x.requiredAction</small></div>
                <br />
            }
        </div>
    </div>
</div>

